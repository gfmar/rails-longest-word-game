
<div class="container">

  <h1>New game</h1>

  <% @letters.each do |letter| %>
    <span id="game_chars"><%= letter.upcase %></span>
  <% end %>

  <form id="guess" action="/score" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <input type="text" name="word" placeholder="Input the longest word...">
    <input type="submit">

  </form>

</div>

